<%-include("../partials/header")%>

 <div class="container" style="margin: 20px auto;">
		     <div class="card m-5">
			     <div class="card-header">
				    <blockquote class="blockquote mb-0">
						<div class="blog">
							<h3>
								<b style="float: left;"><%=Ques.text%></b>
							</h3>
							<%if(currentUser && Ques.author.id.equals(currentUser._id)){%>
			                   <div class="dropdown" style="float:right;">
                                  <button class="dropbtn p-1">></button>
                                  <div class="dropdown-content">

	                                 <a href="/QA/<%=Ques._id%>/edit" class="btn btn-outline-info btn-block" role="button">Edit</a>
                                     <form class="delete-form" action="/QA/<%=Ques._id%>?_method=DELETE" method="POST"> 
							              <input type="submit" class="btn btn-outline-info btn-block" value="Delete">
						             </form>
                                  </div>
                               </div>
							<%}%>
							
					    </div>
				        <footer class="blockquote-footer"><%=Ques.author.username%></footer>
				    </blockquote>
			     </div>
				      <div class="col-md-12 border-top my-3">
						  <img src="https://image.shutterstock.com/image-vector/vector-silhouette-baby-on-white-600w-1664356444.jpg" alt="Avatar" class="avatar mr-2">
			           <strong><%=answer.author.username%></strong>
						  <%if(currentUser && answer.author.id.equals(currentUser._id)){%>
						     <div class="dropdown" style="float:right;">
                                 <button class="dropbtn p-1">></button>
                                 <div class="dropdown-content">

	                                  <a href="/QA/<%=Ques._id%>/answers/<%=answer._id%>/edit" class="btn btn-outline-info btn-block" role="button">Edit</a>
                                      <form class="delete-form" action="/QA/<%=Ques._id%>/answers/<%=answer._id%>?_method=DELETE" method="POST">
							             <input type="submit" class="btn btn-outline-info btn-block" value="Delete">
						              </form>
                                 </div>
                             </div>
						<%}%>
						  <footer class="blockquote-footer space">Answered 10th May</footer>
				         <div class="card-body" style="text-align: center;">
							  
                            <blockquote class="blockquote mb-0">
				                <p><%=answer.text%></p>
				                
				            </blockquote>
							 
			             </div>
				 </div>
				 <div class="row card-body">
			<div class="col-md-12 border-top">
				<div class="input-group m-0">
				<img src="https://image.shutterstock.com/image-vector/vector-silhouette-baby-on-white-600w-1664356444.jpg" alt="Avatar" class="avatar mr-2">
					<form action="/QA/<%=Ques._id%>/answers/<%=answer._id%>" method="POST">
				<div class="form-group input-group m-3">
					<input class="form-control" type="text" placeholder="Add comment" aria-label="Search" aria-describedby="button-addon2" name="comment[text]">
					<div class="input-group-append">
					  <button class="btn btn btn-outline-secondary" type="submit" id=button-addon2>Add</button>
					</div>
				</div>
  			</form>
				
  </div>
				</div>
		
			</div>

				<%for(var i=0;i<answer.comments.length;i++){%>
	       	    
				    <div class="col-md-12 border-top my-3">
						<img src="https://image.shutterstock.com/image-vector/vector-silhouette-baby-on-white-600w-1664356444.jpg" alt="Avatar" class="avatar mr-2">
			           <strong><%=answer.comments[i].author.username%></strong> 
						<%if(currentUser && answer.comments[i].author.id.equals(currentUser._id)){%>
						   <div class="dropdown" style="float:right;">
  <button class="dropbtn p-1">></button>
  <div class="dropdown-content">

	  <a href="/QA/<%=Ques._id%>/answers/<%=answer._id%>/comments/<%=answer.comments[i]._id%>/edit" class="btn btn-outline-info btn-block" role="button">Edit</a>
    <form class="delete-form" action="/QA/<%=Ques._id%>/answers/<%=answer._id%>/comments/<%=answer.comments[i]._id%>?_method=DELETE" method="POST">
							<input type="submit" class="btn btn-outline-info btn-block" value="Delete">
						</form>
  </div>
</div>
						<%}%>
			           <span class="pull-right"> -10 days ago</span>
			           <p class="space"><%=answer.comments[i].text%></p>
						
					</div>
			    
			<%}%>

	             </div>
    </div>



<%-include("../partials/footer")%>