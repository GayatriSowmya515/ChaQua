<%-include("../partials/header")%>

<div class="container">
	<div>
		<div style="text-align: center;margin: 20px auto;">
			<h2 >
		     Edit Blog
		    </h2>
		</div>
		
		<div style="width: 30%; margin: 30px auto;">
			<form action="/blogs/<%= blog._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" value="<%=blog.title%>" aria-label="Search" name="blogs[title]">
				</div>
    			<div class="form-group">
					<input class="form-control" type="text" value="<%=blog.description%>" aria-label="Search" name="blogs[description]">
				</div>
					<button class="btn btn btn-info btn-block" type="submit">Submit!</button>
			  
  			</form>
			<a href="/blogs">Go Back</a>
		</div>
	</div>
</div>

<%-include("../partials/footer")%>